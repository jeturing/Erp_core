# ============================================================================
# ERP_CORE - VARIABLES DE ENTORNO (PLANTILLA)
# ============================================================================
# Copia este archivo a .env y completa los valores
# cp .env.example .env
# ============================================================================

# ----------------------------------------------------------------------------
# üîê STRIPE - PASARELA DE PAGOS
# ----------------------------------------------------------------------------
# Obtener keys en: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=rk_live_YOUR_LIVE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_LIVE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
STRIPE_SUCCESS_URL=https://your-domain.com/success?session_id={CHECKOUT_SESSION_ID}
STRIPE_CANCEL_URL=https://your-domain.com/signup

# ----------------------------------------------------------------------------
# üóÑÔ∏è BASE DE DATOS - POSTGRESQL
# ----------------------------------------------------------------------------
DATABASE_URL=postgresql://your_user:your_password@localhost/erp_core_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=erp_core_db
DB_USER=your_user
DB_PASSWORD=your_password

# ----------------------------------------------------------------------------
# üåê APLICACI√ìN - CONFIGURACI√ìN GENERAL
# ----------------------------------------------------------------------------
APP_PORT=4443
APP_URL=http://localhost:4443
LOG_LEVEL=INFO
LOG_DIR=logs
ENVIRONMENT=development

# ----------------------------------------------------------------------------
# üîí SEGURIDAD - JWT Y AUTENTICACI√ìN
# ----------------------------------------------------------------------------
JWT_SECRET_KEY=your_jwt_secret_key_generate_with_openssl_rand_hex_32
JWT_REFRESH_SECRET_KEY=your_refresh_secret_key_generate_with_openssl
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ----------------------------------------------------------------------------
# üë§ CREDENCIALES ADMIN (CAMBIAR EN PRODUCCI√ìN)
# ----------------------------------------------------------------------------
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# ----------------------------------------------------------------------------
# üõ°Ô∏è SEGURIDAD AVANZADA
# ----------------------------------------------------------------------------
FORCE_HTTPS=false
ENABLE_WAF=true
ALLOWED_ORIGINS=http://localhost:4443,http://127.0.0.1:4443,https://your-domain.com

# ----------------------------------------------------------------------------
# üê≥ PROVISIONING DE TENANTS (LXC/PROXMOX)
# ----------------------------------------------------------------------------
LXC_CONTAINER_ID=105
TENANT_DOMAIN=your-domain.com
PROVISIONING_TIMEOUT=300

# ----------------------------------------------------------------------------
# ‚òÅÔ∏è CLOUDFLARE TUNNELS (OPCIONAL)
# ----------------------------------------------------------------------------
ENABLE_CLOUDFLARE=false
CF_CREDENTIALS_FILE=/root/.cf_credentials
CLOUDFLARED_PATH=/usr/bin/cloudflared
CREATE_TENANT_SCRIPT=/opt/Erp_core/Cloudflare/create_tenant_enhanced.sh

# ----------------------------------------------------------------------------
# üñ•Ô∏è PROXMOX (OPCIONAL - MULTI-CLUSTER)
# ----------------------------------------------------------------------------
PROXMOX_PRIMARY_NODE=172.16.16.160
PROXMOX_API_PORT=8006
PROXMOX_SSH_PORT=22
PROXMOX_API_USER=root@pam

# ===== ODOO CONFIGURATION =====
ODOO_ADMIN_PASSWORD=admin
ODOO_DB_FILTER=^%d.sajet.us$

# ===== FEATURES =====
# Habilitar dashboard admin
ENABLE_ADMIN_DASHBOARD=true

# Habilitar tenant portal
ENABLE_TENANT_PORTAL=true

# Habilitar API de nodes (multi-proxmox)
ENABLE_NODES_API=true

# ===== MONITORING =====
# Intervalo de chequeo de salud (segundos)
HEALTH_CHECK_INTERVAL=300


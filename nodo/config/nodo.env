# Configuración de Nodo Odoo
# Copiar a /etc/environment o usar en servicios systemd

# Puerto donde escucha la API local
ODOO_API_PORT=8070

# Dominio principal del nodo
ODOO_DOMAIN=sajet.us

# API Key para comunicación entre nodos
PROVISIONING_API_KEY=prov-key-2026-secure

# Cloudflare - Reemplazar con valores reales
CLOUDFLARE_API_TOKEN=tu_token_aqui
CF_TUNNEL_ID=tu_tunnel_id_aqui

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PORT=5432

# DB Watcher
DB_WATCHER_INTERVAL=10

# Logging
LOG_LEVEL=INFO
